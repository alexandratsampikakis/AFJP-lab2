<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.afjp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.afjp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.afjp.MyCountries"
            android:label="@string/title_activity_my_countries" >
        </activity>
        <activity
            android:name="com.example.afjp.AddCountry"
            android:label="@string/title_activity_add_country" >
        </activity>
        <activity
            android:name="com.example.afjp.menuSettings.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.example.afjp.AlarmClock"
            android:label="@string/title_activity_alarm_clock" >
        </activity>
        <activity
            android:name="com.example.afjp.AlarmActivity"
            android:label="@string/title_activity_alarm" >
        </activity>
        <activity
            android:name="com.example.afjp.MP3Player"
            android:label="@string/title_activity_mp3_player" >
        </activity>
        <service
            android:name="com.example.afjp.MP3Service"
            android:label="@string/title_activity_mp3_service" >
        </service> 
    </application>

</manifest>
